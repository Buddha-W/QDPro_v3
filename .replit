entrypoint = "main.py"
modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8080
externalPort = 80

[workflows]
runButton = "QDPro"

[[workflows.workflow]]
name = "QDPro Development"
author = 39096588

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 8080 --reload"

[[workflows.workflow]]
name = "QDPro Server"
author = 39096588

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 8080 --reload"

[[workflows.workflow]]
name = "QDPro"
author = 39096588

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
